@model MyBlog.Models.ViewModels.RegisterVM
<h2>Register new User</h2>
<form method="post"
      asp-controller="Account"
      asp-action="Register">

    <div asp-validation-summary="ModelOnly"></div>

    <div>
        <label asp-for="Email"></label><br />
        <input asp-for="Email" placeholder="@nameof(Model.Email)" />
        <span asp-validation-for="Email"></span>
    </div>

    <div>
        <label asp-for="Password"></label><br />
        <input asp-for="Password" placeholder="@nameof(Model.Password)"/>
        <span asp-validation-for="Password"></span>
    </div>

    <div>
        <label asp-for="PasswordConfirm"></label><br />
        <input asp-for="PasswordConfirm" placeholder="@nameof(Model.PasswordConfirm)"/>
        <span asp-validation-for="PasswordConfirm"></span>
    </div>

    <div>
        <input type="submit" value="Register" />
    </div>
</form>

