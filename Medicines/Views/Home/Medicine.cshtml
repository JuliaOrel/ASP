
@model IndexMedicinesVM
<h2>Medicines</h2>
<div class="row">
    @foreach (var medicine in Model.Medicines)
    {
        <div class="col col-xl-3 col-lg-4 col-md-6 col-12 mb-5">
            <div class="card">
                <div class="card-body">
                    <h5 class="card-title text-truncate">@medicine.Name</h5>
                   
                    
                    <div class=" btn-group btn-group-sm" role="group">
                        <a asp-action="Details"
                           asp-route-id="@medicine.Id" class="btn btn-success">Details</a>
                       
                    </div>
                </div>
                
            </div>

        </div>
    }
</div>
